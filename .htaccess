RewriteEngine On
SetEnvIf Host www.ardi.com$ CI_ENV=production
SetEnvIf Host web-dosen.000webhostapp.com$ CI_ENV=testing
SetEnvIf Host localhost$ CI_ENV=development

RewriteCond $1 !^(index\\.php|resources|robots\\.txt)
